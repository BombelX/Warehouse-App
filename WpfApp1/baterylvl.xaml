<UserControl x:Class="WpfApp1.baterylvl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApp1"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="100">
    <Viewbox>
        <StackPanel Orientation="Horizontal" FlowDirection="RightToLeft">
            <Border Background="#00c000" CornerRadius="2,0,0,2" Padding="2" Width="3" Height="10" Margin="0,-2,0,-2"/>
            <Border BorderBrush="#00c000" BorderThickness="2" CornerRadius="5" Padding="2" Width="50" Height="25">
                <Grid>
                    <ProgressBar Background="Transparent" BorderBrush="Transparent" Minimum="0" Maximum="100" Value="{Binding Path=Level}" FlowDirection="LeftToRight" Foreground="#00c000"/>
                    <TextBlock Text="{Binding Path=Percentage}" x:Name="battery_text" TextAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Center" FlowDirection="LeftToRight" />
                </Grid>
            </Border>
        </StackPanel>
    </Viewbox>
</UserControl>
